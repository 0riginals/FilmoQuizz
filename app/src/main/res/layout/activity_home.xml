<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.filmoquizz.controller.MainActivity">

    <ImageView
        android:id="@+id/filmoQuizzLogo"
        android:layout_width="96dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toStartOf="@+id/filmoQuizz"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/filmoQuizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:padding="20dp"
        android:text="FilmoQuizz"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/filmoQuizzLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movieListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="128dp"
        android:padding="20dp"
        android:text="Venez découvrir notre large bibliothèque de films"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="159dp"
        android:layout_height="118dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/encyclopedie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieListTextView" />

    <TextView
        android:id="@+id/quizzTextView"
        android:layout_width="382dp"
        android:layout_height="107dp"
        android:layout_marginTop="392dp"
        android:padding="20dp"
        android:text="Testez vos connaissance sur notre bibliothèque de films à travers notre super Quizz !"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/filmoQuizz" />

    <ImageView
        android:layout_width="159dp"
        android:layout_height="118dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/quizz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizzTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>